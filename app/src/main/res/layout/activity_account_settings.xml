<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_account_settings"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    tools:context=".modlues.personal.activity.accountsettings.AccountSettingsActivity">
    <include layout="@layout/tool_bar"/>
    <com.xuanqi.he.o2omvp.widget.ReboundScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <Space
                android:layout_width="match_parent"
                android:layout_height="10dp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:divider="@drawable/line_space"
                android:showDividers="middle"
                android:background="@color/white">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="头像"
                        android:textColor="@color/text_color"
                        android:textSize="16sp"
                        android:layout_centerVertical="true"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true">
                        <com.xuanqi.he.o2omvp.widget.CircleImageView
                            android:id="@+id/m_icon"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_gravity="center"
                            android:src="@mipmap/img_add"/>
                        <Space
                            android:layout_width="5dp"
                            android:layout_height="match_parent" />
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/icon_arrow_right"
                            android:layout_gravity="center"/>
                    </LinearLayout>

                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/m_modify_nickname"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="昵称"
                        android:textSize="16sp"
                        android:textColor="@color/text_color"
                        android:layout_centerVertical="true"/>
                    <TextView
                        android:id="@+id/m_nickname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:gravity="center"
                        android:textSize="12sp"
                        android:textColor="@color/light_gray"
                        android:text="诸葛小前锋"
                        android:drawablePadding="5dp"
                        android:drawableRight="@mipmap/icon_arrow_right"/>
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/m_modify_gender"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="性别"
                        android:textSize="16sp"
                        android:textColor="@color/text_color"
                        android:layout_centerVertical="true"/>
                    <TextView
                        android:id="@+id/m_gender"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:gravity="center"
                        android:textSize="12sp"
                        android:textColor="@color/light_gray"
                        android:text="男"
                        android:drawablePadding="5dp"
                        android:drawableRight="@mipmap/icon_arrow_right"/>
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/m_modify_signature"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="简介"
                        android:textSize="16sp"
                        android:textColor="@color/text_color"
                        android:layout_centerVertical="true"/>
                    <TextView
                        android:id="@+id/m_signature"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:gravity="center"
                        android:textSize="12sp"
                        android:textColor="@color/light_gray"
                        android:text="说点什么吧"
                        android:drawablePadding="5dp"
                        android:drawableRight="@mipmap/icon_arrow_right"/>
                </RelativeLayout>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:text="账户绑定"
                android:textColor="@color/text_color"
                android:textSize="16sp"
                android:gravity="center_vertical"
                android:paddingLeft="15dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:divider="@drawable/line_space"
                android:showDividers="middle"
                android:background="@color/white">
                <RelativeLayout
                    android:id="@+id/m_real_name"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="实名认证"
                        android:textSize="16sp"
                        android:drawablePadding="5dp"
                        android:gravity="center"
                        android:drawableLeft="@mipmap/icon_account01"
                        android:textColor="@color/text_color"
                        android:layout_centerVertical="true"/>
                    <TextView
                        android:id="@+id/m_real_name_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:gravity="center"
                        android:textSize="12sp"
                        android:textColor="@color/light_gray"
                        android:text="未认证"
                        android:drawablePadding="5dp"
                        android:drawableRight="@mipmap/icon_arrow_right"/>
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/m_phone_number"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="手机"
                        android:textSize="16sp"
                        android:gravity="center"
                        android:drawablePadding="5dp"
                        android:drawableLeft="@mipmap/icon_account02"
                        android:textColor="@color/text_color"
                        android:layout_centerVertical="true"/>
                    <TextView
                        android:id="@+id/m_phone_number_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:gravity="center"
                        android:textSize="12sp"
                        android:textColor="@color/toolbar_color"
                        android:text="13621122121"
                        android:drawablePadding="5dp"
                        android:drawableRight="@mipmap/icon_arrow_right"/>
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/m_we_chat"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="微信"
                        android:textSize="16sp"
                        android:gravity="center"
                        android:drawablePadding="5dp"
                        android:drawableLeft="@mipmap/icon_account04"
                        android:textColor="@color/text_color"
                        android:layout_centerVertical="true"/>
                    <TextView
                        android:id="@+id/m_we_chat_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:gravity="center"
                        android:textSize="12sp"
                        android:textColor="@color/light_gray"
                        android:text="未绑定"
                        android:drawablePadding="5dp"
                        android:drawableRight="@mipmap/icon_arrow_right"/>
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/m_qq"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="QQ"
                        android:textSize="16sp"
                        android:gravity="center"
                        android:drawablePadding="5dp"
                        android:drawableLeft="@mipmap/icon_account03"
                        android:textColor="@color/text_color"
                        android:layout_centerVertical="true"/>
                    <TextView
                        android:id="@+id/m_qq_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:gravity="center"
                        android:textSize="12sp"
                        android:textColor="@color/light_gray"
                        android:text="未绑定"
                        android:drawablePadding="5dp"
                        android:drawableRight="@mipmap/icon_arrow_right"/>
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/m_sina"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="微博"
                        android:textSize="16sp"
                        android:gravity="center"
                        android:drawablePadding="5dp"
                        android:drawableLeft="@mipmap/icon_account05"
                        android:textColor="@color/text_color"
                        android:layout_centerVertical="true"/>
                    <TextView
                        android:id="@+id/m_sina_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:gravity="center"
                        android:textSize="12sp"
                        android:textColor="@color/light_gray"
                        android:text="未绑定"
                        android:drawablePadding="5dp"
                        android:drawableRight="@mipmap/icon_arrow_right"/>
                </RelativeLayout>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:text="安全设置"
                android:textColor="@color/text_color"
                android:textSize="16sp"
                android:gravity="center_vertical"
                android:paddingLeft="15dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:divider="@drawable/line_space"
                android:showDividers="middle"
                android:background="@color/white"
                android:layout_marginBottom="30dp">
                <RelativeLayout
                    android:id="@+id/m_login_password"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="登录密码"
                        android:textSize="16sp"
                        android:textColor="@color/text_color"
                        android:layout_centerVertical="true"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:gravity="center"
                        android:textSize="12sp"
                        android:textColor="@color/light_gray"
                        android:text="修改"
                        android:drawablePadding="5dp"
                        android:drawableRight="@mipmap/icon_arrow_right"/>
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/m_payment_password"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="支付密码"
                        android:textSize="16sp"
                        android:textColor="@color/text_color"
                        android:layout_centerVertical="true"/>
                    <TextView
                        android:id="@+id/m_payment_password_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:gravity="center"
                        android:textSize="12sp"
                        android:textColor="@color/light_gray"
                        android:text="未设置"
                        android:drawablePadding="5dp"
                        android:drawableRight="@mipmap/icon_arrow_right"/>
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </com.xuanqi.he.o2omvp.widget.ReboundScrollView>

</LinearLayout>
