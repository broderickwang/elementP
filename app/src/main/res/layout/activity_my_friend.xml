<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_my_friend"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    tools:context=".modlues.personal.activity.myfriend.MyFriendActivity">
    <include layout="@layout/tool_bar"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:background="@color/rect_back_color">
        <TextView
            android:id="@+id/tv_search"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_centerInParent="true"
            android:drawableLeft="@mipmap/icon_search"
            android:text="请输入用户昵称"
            android:singleLine="true"
            android:ellipsize="end"
            android:textSize="14sp"
            android:gravity="center_vertical"
            android:textColor="@color/light_gray"
            android:background="@drawable/solid_white_shape"/>
    </RelativeLayout>
    <!--<View-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="10dp"-->
        <!--android:background="@color/white"/>-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.xuanqi.he.o2omvp.widget.recycler.WrapRecyclerView
            android:id="@+id/recycler_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></com.xuanqi.he.o2omvp.widget.recycler.WrapRecyclerView>
        <com.xuanqi.he.o2omvp.widget.SideView
            android:id="@+id/slide_view"
            android:layout_width="25dp"
            android:layout_height="match_parent"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="40dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"/>
        <com.xuanqi.he.o2omvp.widget.CircleTextView
            android:id="@+id/tv_circle"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:visibility="gone"
            android:layout_centerInParent="true"
            android:textSize="25sp"
            android:textColor="@color/white"/>
    </RelativeLayout>
</LinearLayout>
