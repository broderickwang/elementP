<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:divider="@drawable/line_space"
    android:paddingBottom="15dp"
    android:showDividers="middle"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal"
        android:background="@color/white"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">
        <com.xuanqi.he.o2omvp.widget.CircleImageView
            android:id="@+id/item_icon"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@mipmap/img_add"
            android:layout_gravity="center"/>
        <Space
            android:layout_width="5dp"
            android:layout_height="match_parent"/>
        <TextView
            android:id="@+id/item_name"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textColor="@color/light_text_color"
            android:singleLine="true"
            android:ellipsize="end"
            android:textSize="16sp"
            android:layout_gravity="center"
            android:text="诸葛小前锋"/>
        <TextView
            android:id="@+id/item_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="已接单"
            android:textSize="14sp"
            android:textColor="@color/red"
            android:layout_gravity="center"/>
        <Space
            android:layout_width="7dp"
            android:layout_height="match_parent"/>
        <ImageView
            android:id="@+id/item_clear"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@mipmap/icon_delete"
            android:layout_gravity="center"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal"
        android:background="@color/white"
        android:paddingLeft="27.5dp"
        android:paddingRight="27.5dp">
        <ImageView
            android:id="@+id/item_pic"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:src="@mipmap/test_home_img01"/>
        <Space
            android:layout_width="27.5dp"
            android:layout_height="match_parent"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">
            <TextView
                android:id="@+id/item_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="家政搬家！急！服务号的速来！"
                android:textColor="@color/light_text_color"
                android:textSize="16sp"
                android:singleLine="true"
                android:ellipsize="end"/>
            <Space
                android:layout_width="match_parent"
                android:layout_height="10dp"/>
            <TextView
                android:id="@+id/item_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/light_gray"
                android:text="任务赏金 ¥50"/>
        </LinearLayout>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/white"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">
        <TextView
            android:id="@+id/item_look_progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/gray_white_shape"
            android:textColor="@color/light_gray"
            android:text="查看进度"
            android:includeFontPadding="false"
            android:textSize="14sp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>
</LinearLayout>