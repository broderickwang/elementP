<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    tools:context="com.xuanqi.he.o2omvp.activity.login.LoginActivity">
    <include layout="@layout/tool_bar"/>
    <Space
        android:layout_width="match_parent"
        android:layout_height="10dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:divider="@drawable/line_space"
        android:showDividers="middle"
        android:background="@color/white">
        <EditText
            android:id="@+id/m_edit_phone"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:inputType="number"
            android:hint="请输入您的手机号"
            android:textSize="14sp"
            android:background="@null"
            android:textColorHint="@color/light_gray"
            android:textColor="@color/light_text_color"
            android:cursorVisible="false"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"/>

        <EditText
            android:id="@+id/m_edit_password"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:digits="@string/filter_vcode"
            android:hint="请输入您的登录密码"
            android:textSize="14sp"
            android:inputType="textPassword"
            android:background="@null"
            android:textColorHint="@color/light_gray"
            android:textColor="@color/light_text_color"
            android:cursorVisible="false"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"/>
    </LinearLayout>
    <Space
        android:layout_width="match_parent"
        android:layout_height="7dp" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">
        <CheckBox
            android:id="@+id/m_check_box"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:button="@null"
            android:background="@drawable/checkbox_selector"
            android:layout_centerVertical="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="记住密码"
            android:textSize="14sp"
            android:textColor="@color/light_text_color"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/m_check_box"
            android:layout_centerVertical="true"/>
        <TextView
            android:id="@+id/m_forget"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="忘记密码?"
            android:textSize="14sp"
            android:textColor="@color/light_text_color"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>
    <Space
        android:layout_width="match_parent"
        android:layout_height="20dp" />
    <TextView
        android:id="@+id/m_confirm"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/btn_orange_white_selector"
        android:text="立即登录"
        android:gravity="center"
        android:textSize="16sp"
        android:textColor="@color/btn_orange_white_selected"/>
    <Space
        android:layout_width="match_parent"
        android:layout_height="50dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">
        <View
            android:layout_width="0dp"
            android:layout_height="@dimen/line_height"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:background="@drawable/line_space"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="第三方登录"
            android:textColor="@color/light_text_color"
            android:textSize="14sp"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"/>
        <View
            android:layout_width="0dp"
            android:layout_height="@dimen/line_height"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:background="@drawable/line_space"/>
    </LinearLayout>
    <Space
        android:layout_width="match_parent"
        android:layout_height="30dp" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center">
        <ImageView
            android:id="@+id/m_we_chat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/login_type1"/>
        <ImageView
            android:id="@+id/m_sina"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/login_type2"
            android:layout_marginLeft="20dp"/>
        <ImageView
            android:id="@+id/m_qq"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/login_type3"
            android:layout_marginLeft="20dp"/>
    </LinearLayout>
</LinearLayout>
