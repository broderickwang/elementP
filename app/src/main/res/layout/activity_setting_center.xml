<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_setting_center"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    tools:context=".modlues.personal.activity.settingcenter.SettingCenterActivity">

    <include layout="@layout/tool_bar"/>
    <Space
        android:layout_width="match_parent"
        android:layout_height="10dp" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:background="@color/white">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="消息中心"
            android:textSize="16sp"
            android:gravity="center"
            android:textColor="@color/text_color"
            android:layout_centerVertical="true"
            android:drawablePadding="5dp"
            android:drawableLeft="@mipmap/icon_set01"/>
        <com.xuanqi.he.o2omvp.widget.SwitchButton
            android:id="@+id/m_switch_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            style="@style/SwitchButtonMD"/>
        <!--app:kswBackColor="@color/ksw_md_back_color"-->
        <!--app:kswTintColor="@color/ksw_md_solid_checked"-->
    </RelativeLayout>
    <Space
        android:layout_width="match_parent"
        android:layout_height="10dp" />
    <RelativeLayout
        android:id="@+id/m_consumer_hotline"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:background="@color/white">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="客服电话"
            android:textSize="16sp"
            android:gravity="center"
            android:textColor="@color/text_color"
            android:layout_centerVertical="true"
            android:drawablePadding="5dp"
            android:drawableLeft="@mipmap/icon_set02"/>
        <TextView
            android:id="@+id/m_phone_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="13251484512"
            android:textColor="@color/toolbar_color"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:drawablePadding="5dp"
            android:textSize="14sp"
            android:gravity="center"
            android:drawableRight="@mipmap/icon_arrow_right"/>
    </RelativeLayout>
    <Space
        android:layout_width="match_parent"
        android:layout_height="10dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
        android:divider="@drawable/line_space"
        android:showDividers="middle">
        <RelativeLayout
            android:id="@+id/m_clear_cache"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="清除缓存"
                android:textSize="16sp"
                android:gravity="center"
                android:textColor="@color/text_color"
                android:layout_centerVertical="true"
                android:drawablePadding="5dp"
                android:drawableLeft="@mipmap/icon_set03"/>
            <TextView
                android:id="@+id/m_cache"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0.00M"
                android:gravity="center"
                android:textColor="@color/text_color"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:drawablePadding="5dp"
                android:textSize="12sp"
                android:drawableRight="@mipmap/icon_arrow_right"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/m_about_us"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="关于我们"
                android:textSize="16sp"
                android:gravity="center"
                android:textColor="@color/text_color"
                android:layout_centerVertical="true"
                android:drawablePadding="5dp"
                android:drawableLeft="@mipmap/icon_set04"/>
            <TextView
                android:id="@+id/m_version"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="v1.0"
                android:gravity="center"
                android:textColor="@color/toolbar_color"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:drawablePadding="5dp"
                android:textSize="12sp"
                android:drawableRight="@mipmap/icon_arrow_right"/>
        </RelativeLayout>
    </LinearLayout>
    <Space
        android:layout_width="match_parent"
        android:layout_height="20dp" />
    <TextView
        android:id="@+id/m_exit"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/btn_orange_white_selector"
        android:text="退出当前账号"
        android:gravity="center"
        android:textSize="16sp"
        android:textColor="@color/btn_orange_white_selected"/>
</LinearLayout>
