<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:id="@+id/root"
    android:orientation="vertical">
    <include layout="@layout/tool_bar"/>
    <com.xuanqi.he.o2omvp.widget.ReboundScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:background="@color/white">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:orientation="vertical">
                    <com.xuanqi.he.o2omvp.widget.CircleImageView
                        android:id="@+id/iv_icon"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_gravity="center_horizontal"
                        android:src="@mipmap/test_home_img01"/>
                    <Space
                        android:layout_width="wrap_content"
                        android:layout_height="5dp"/>
                    <TextView
                        android:id="@+id/tv_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="订单已完成 >"
                        android:textSize="16sp"
                        android:textColor="@color/text_color"/>
                    <Space
                        android:layout_width="wrap_content"
                        android:layout_height="5dp"/>
                    <TextView
                        android:id="@+id/tv_honorifics"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="感谢你对我们服务的信任,期待您再次光临!"
                        android:textColor="@color/light_text_color"
                        android:textSize="13sp"
                        android:layout_gravity="center_horizontal"/>
                    <Space
                        android:layout_width="wrap_content"
                        android:layout_height="5dp"/>
                    <com.xuanqi.he.o2omvp.widget.filldatalinear.FillDataLinearLayout
                        android:id="@+id/ll_btn_box"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_gravity="center_horizontal"></com.xuanqi.he.o2omvp.widget.filldatalinear.FillDataLinearLayout>
                </LinearLayout>
            </RelativeLayout>
            <Space
                android:layout_width="match_parent"
                android:layout_height="10dp"/>
            <TextView
                android:id="@+id/tv_store_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:drawableLeft="@mipmap/icon_shop"
                android:drawablePadding="3dp"
                android:gravity="center_vertical"
                android:paddingBottom="7dp"
                android:paddingTop="7dp"
                android:paddingRight="15dp"
                android:paddingLeft="15dp"
                android:text="百姓便利超市"
                android:textColor="@color/text_color"
                android:textSize="16sp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/line_height"
                android:background="@drawable/line_space"/>

            <com.xuanqi.he.o2omvp.widget.filldatalinear.FillDataLinearLayout
                android:id="@+id/ll_goods_box"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"></com.xuanqi.he.o2omvp.widget.filldatalinear.FillDataLinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/line_height"
                android:layout_marginLeft="15dp"
                android:background="@drawable/line_space"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="配送费"
                    android:textColor="@color/text_color"
                    android:textSize="14sp"/>

                <TextView
                    android:id="@+id/tv_delivery_fee"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:text="¥ 4"
                    android:textColor="@color/light_text_color"
                    android:textSize="14sp"/>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/line_height"
                android:layout_marginLeft="15dp"
                android:background="@drawable/line_space"/>

            <com.xuanqi.he.o2omvp.widget.filldatalinear.FillDataLinearLayout
                android:id="@+id/ll_offer_box"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/white"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"></com.xuanqi.he.o2omvp.widget.filldatalinear.FillDataLinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/line_height"
                android:layout_marginLeft="15dp"
                android:background="@drawable/line_space"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingBottom="20dp"
                android:background="@color/white">
                <TextView
                    android:id="@+id/tv_real_money"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:gravity="center_vertical|end"
                    android:text="实付 ¥ 50"
                    android:textColor="@color/text_color"
                    android:textSize="14sp"/>
                <RelativeLayout
                    android:id="@+id/rl_btn_contact_merchant"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:background="@drawable/gray_white_shape">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:textColor="@color/light_gray"
                        android:layout_centerInParent="true"
                        android:text="联系商家"
                        android:gravity="center"
                        android:drawableLeft="@mipmap/icon_kefu"/>
                </RelativeLayout>
            </LinearLayout>
            <Space
                android:layout_width="match_parent"
                android:layout_height="10dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/white"
                android:paddingBottom="20dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="配送信息"
                    android:textColor="@color/text_color"
                    android:textSize="16sp"
                    android:gravity="center_vertical"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/line_height"
                    android:background="@drawable/line_space"/>
                <TextView
                    android:id="@+id/tv_delivery_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="送达时间 : 尽快送达 | 预计11:10分"
                    android:textColor="@color/light_text_color"
                    android:textSize="14sp"
                    android:gravity="center_vertical"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/line_height"
                    android:layout_marginLeft="15dp"
                    android:background="@drawable/line_space"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:paddingBottom="7dp"
                    android:paddingTop="7dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/light_text_color"
                        android:textSize="14sp"
                        android:text="收货地址 : "/>
                    <TextView
                        android:id="@+id/tv_shipping_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/light_text_color"
                        android:textSize="14sp"
                        android:lines="3"
                        android:ellipsize="end"
                        android:lineSpacingExtra="5dp"
                        android:text="张无忌  先生\n159888977865\n福建省晋江市顶立大厦"/>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/line_height"
                    android:layout_marginLeft="15dp"
                    android:background="@drawable/line_space"/>
                <TextView
                    android:id="@+id/tv_delivery_method"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="配送方式 : 蜂鸟配送"
                    android:textColor="@color/light_text_color"
                    android:textSize="14sp"
                    android:gravity="center_vertical"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/line_height"
                    android:layout_marginLeft="15dp"
                    android:background="@drawable/line_space"/>
                <TextView
                    android:id="@+id/tv_delivery_personnel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="配送人员 : 诸葛小前锋"
                    android:textColor="@color/light_text_color"
                    android:textSize="14sp"
                    android:gravity="center_vertical"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"/>
                <RelativeLayout
                    android:id="@+id/rl_btn_contact_dispatcher"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/gray_white_shape">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:textColor="@color/light_gray"
                        android:layout_centerInParent="true"
                        android:text="联系配送员"
                        android:gravity="center"
                        android:drawableLeft="@mipmap/icon_kefu"/>
                </RelativeLayout>
            </LinearLayout>
            <Space
                android:layout_width="match_parent"
                android:layout_height="10dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/white">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="订单信息"
                    android:textColor="@color/text_color"
                    android:textSize="16sp"
                    android:gravity="center_vertical"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/line_height"
                    android:background="@drawable/line_space"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp">

                    <TextView
                        android:id="@+id/tv_order_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="订单编号 : 15451521155121"
                        android:textColor="@color/light_text_color"
                        android:textSize="14sp"/>

                    <TextView
                        android:id="@+id/tv_copy_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:text="复制"
                        android:background="@drawable/red_white_shape"
                        android:textColor="@color/red"
                        android:textSize="14sp"/>
                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/line_height"
                    android:layout_marginLeft="15dp"
                    android:background="@drawable/line_space"/>
                <TextView
                    android:id="@+id/tv_payment_method"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="支付方式 : 在线支付"
                    android:textColor="@color/light_text_color"
                    android:textSize="14sp"
                    android:gravity="center_vertical"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/line_height"
                    android:layout_marginLeft="15dp"
                    android:background="@drawable/line_space"/>
                <TextView
                    android:id="@+id/tv_order_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="下单时间 : 2017-05-04 11:14"
                    android:textColor="@color/light_text_color"
                    android:textSize="14sp"
                    android:gravity="center_vertical"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"/>
            </LinearLayout>
            <Space
                android:layout_width="match_parent"
                android:layout_height="50dp"/>
        </LinearLayout>
    </com.xuanqi.he.o2omvp.widget.ReboundScrollView>
</LinearLayout>