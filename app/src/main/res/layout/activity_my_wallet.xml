<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_my_wallet"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    tools:context=".modlues.personal.activity.mywallet.MyWalletActivity">
    <include layout="@layout/tool_bar"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="160dp">
        <TextView
            android:id="@+id/m_balance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableTop="@mipmap/icon_wallet"
            android:layout_centerInParent="true"
            android:text="我的余额：0.00元"
            android:textSize="14sp"
            android:gravity="center"
            android:textColor="@color/toolbar_color"
            android:drawablePadding="7dp"/>
    </RelativeLayout>
    <TextView
        android:id="@+id/m_my_bankcard"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/white"
        android:text="我的银行卡"
        android:textColor="@color/text_color"
        android:gravity="center_vertical"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:drawablePadding="5dp"
        android:textSize="16sp"
        android:drawableRight="@mipmap/icon_arrow_right"
        android:drawableLeft="@mipmap/icon_wallet01"/>
    <Space
        android:layout_width="match_parent"
        android:layout_height="10dp" />
    <TextView
        android:id="@+id/m_want_recharge"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/white"
        android:text="我要充值"
        android:textColor="@color/text_color"
        android:gravity="center_vertical"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:drawablePadding="5dp"
        android:textSize="16sp"
        android:drawableRight="@mipmap/icon_arrow_right"
        android:drawableLeft="@mipmap/icon_wallet02"/>
    <Space
        android:layout_width="match_parent"
        android:layout_height="10dp" />
    <TextView
        android:id="@+id/m_want_withdraw"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/white"
        android:text="我要提现"
        android:textColor="@color/text_color"
        android:textSize="16sp"
        android:gravity="center_vertical"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:drawablePadding="5dp"
        android:drawableRight="@mipmap/icon_arrow_right"
        android:drawableLeft="@mipmap/icon_wallet03"/>
    <Space
        android:layout_width="match_parent"
        android:layout_height="10dp" />
    <TextView
        android:id="@+id/m_recharge_record"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/white"
        android:text="充值记录"
        android:textSize="16sp"
        android:textColor="@color/text_color"
        android:gravity="center_vertical"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:drawablePadding="5dp"
        android:drawableRight="@mipmap/icon_arrow_right"
        android:drawableLeft="@mipmap/icon_wallet04"/>
    <Space
        android:layout_width="match_parent"
        android:layout_height="10dp" />
    <TextView
        android:id="@+id/m_withdraw_record"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/white"
        android:text="提现记录"
        android:textSize="16sp"
        android:textColor="@color/text_color"
        android:gravity="center_vertical"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:drawablePadding="5dp"
        android:drawableRight="@mipmap/icon_arrow_right"
        android:drawableLeft="@mipmap/icon_wallet05"/>
</LinearLayout>
