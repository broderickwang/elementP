    <Space
        android:layout_width="match_parent"
        android:layout_height="10dp" />
    <ImageView
        android:id="@+id/iv_advertising_two"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:scaleType="fitXY"
        android:src="@mipmap/test_img_ad01"/>
    <Space
        android:layout_width="match_parent"
        android:layout_height="10dp" />
    <TextView
