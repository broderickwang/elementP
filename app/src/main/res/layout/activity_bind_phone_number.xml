<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_bind_phone_number"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    tools:context=".modlues.personal.activity.bindphonenumber.BindPhoneNumberActivity">
    <include layout="@layout/tool_bar"/>
    <Space
        android:layout_width="match_parent"
        android:layout_height="10dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:divider="@drawable/line_space"
        android:showDividers="middle"
        android:background="@color/white">
        <EditText
            android:id="@+id/m_edit_phone"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:inputType="number"
            android:hint="请输入您的手机号"
            android:textSize="14sp"
            android:background="@null"
            android:textColorHint="@color/light_gray"
            android:textColor="@color/text_color"
            android:cursorVisible="false"
            android:layout_marginLeft="15dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:divider="@drawable/line_space"
            android:showDividers="middle"
            android:layout_marginLeft="15dp">
            <EditText
                android:id="@+id/m_edit_code"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:inputType="number"
                android:hint="请输入短信验证码"
                android:textSize="14sp"
                android:background="@null"
                android:textColorHint="@color/light_gray"
                android:textColor="@color/text_color"
                android:cursorVisible="false"/>

            <TextView
                android:id="@+id/m_get_code"
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:text="获取验证码"
                android:gravity="center"
                android:textColor="@color/toolbar_color"
                android:textSize="12sp"/>
        </LinearLayout>
    </LinearLayout>
    <Space
        android:layout_width="match_parent"
        android:layout_height="15dp" />
    <TextView
        android:id="@+id/m_confirm"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/btn_orange_white_selector"
        android:text="确认"
        android:gravity="center"
        android:textSize="16sp"
        android:textColor="@color/btn_orange_white_selected"/>
    <Space
        android:layout_width="match_parent"
        android:layout_height="5dp" />
    <TextView
        android:id="@+id/m_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:singleLine="true"
        android:textColor="@color/light_gray"
        android:ellipsize="end"
        android:textSize="12sp"/>
</LinearLayout>
