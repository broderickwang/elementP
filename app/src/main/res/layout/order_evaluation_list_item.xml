<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="10dp"
    android:orientation="vertical">
    <TextView
        android:id="@+id/tv_store_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:drawableLeft="@mipmap/icon_shop"
        android:drawablePadding="3dp"
        android:gravity="center_vertical"
        android:paddingBottom="7dp"
        android:paddingTop="7dp"
        android:paddingRight="15dp"
        android:paddingLeft="15dp"
        android:text="百姓便利超市"
        android:textColor="@color/text_color"
        android:textSize="16sp"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_height"
        android:background="@drawable/line_space"/>
    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="可口可乐铁罐"
        android:textSize="14sp"
        android:textColor="@color/text_color"
        android:background="@color/white"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:lines="1"
        android:ellipsize="end"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"/>
    <com.xuanqi.he.o2omvp.widget.flowlayout.TagFlowLayout
        android:id="@+id/tag_flow_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:background="@color/white"></com.xuanqi.he.o2omvp.widget.flowlayout.TagFlowLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
        android:padding="15dp">
        <EditText
            android:id="@+id/edit_text"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="@color/window_background"
            android:gravity="start"
            android:textSize="14sp"
            android:padding="5dp"
            android:textColorHint="@color/light_gray"
            android:hint="说说哪里满意,帮大家选择..."/>
    </LinearLayout>
</LinearLayout>