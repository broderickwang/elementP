<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_search"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".modlues.main.activity.search.SearchActivity">
    <RelativeLayout
        android:id="@+id/ll_box"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="@color/toolbar_color">
        <!--<Space-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="45dp"/>-->
        <FrameLayout
            android:id="@+id/fl_search_box"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:paddingRight="15dp">
            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center|left"
                android:src="@mipmap/icon_back" />
            <TextView
                android:id="@+id/tv_search"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|right"
                android:text="搜索"
                android:textSize="14sp"
                android:textColor="@color/white" />
            <EditText
                android:id="@+id/edit_search"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:background="@drawable/input_white_shape"
                android:hint="输入商家、商品名称"
                android:textSize="14sp"
                android:cursorVisible="false"
                android:layout_gravity="center"
                android:singleLine="true"
                android:ellipsize="end"
                android:textColorHint="@color/light_gray"
                android:textColor="@color/light_text_color"
                android:gravity="center_vertical"
                android:paddingLeft="15dp"
                android:drawableLeft="@mipmap/icon_search"/>

        </FrameLayout>
    </RelativeLayout>
    <com.xuanqi.he.o2omvp.widget.ReboundScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/ll_box"
        android:background="@color/white"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="热门搜索"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:gravity="center_vertical"
                android:textColor="@color/light_text_color"
                android:textSize="16sp"/>
            <com.xuanqi.he.o2omvp.widget.flowlayout.TagFlowLayout
                android:id="@+id/flow_layout_popular"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                app:max_select="1"></com.xuanqi.he.o2omvp.widget.flowlayout.TagFlowLayout>
            <Space
                android:layout_width="match_parent"
                android:layout_height="30dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="历史搜索"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:gravity="center_vertical"
                android:textColor="@color/light_text_color"
                android:textSize="16sp"/>
            <com.xuanqi.he.o2omvp.widget.flowlayout.TagFlowLayout
                android:id="@+id/flow_layout_history"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                app:max_select="1"></com.xuanqi.he.o2omvp.widget.flowlayout.TagFlowLayout>
        </LinearLayout>
    </com.xuanqi.he.o2omvp.widget.ReboundScrollView>

</RelativeLayout>
